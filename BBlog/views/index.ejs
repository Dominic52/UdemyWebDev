<% include partials/header %>
<div class="ui main container text">
    <div class="ui huge header">Basic Blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a href="/blogs/<%= blog._id %>" class="header"><%= blog.title %></a>
                        <div class="meta">
                                <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p>
                                <% if (blog.body.length < 100) { %>
                                    <%- blog.body; %>
                                <% } else { %>
                                    <%- blog.body.substring(0, 100) %>...
                                <% } %>
                            </p>
                        </div>
                        <a href="/blogs/<%=blog._id%>" class="ui floated basic violet button">Read More<i class="right chevron icon"></i></a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>
<% include partials/footer %>